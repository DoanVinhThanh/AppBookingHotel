<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/border_viewpager">

    <ImageView
        android:id="@+id/img_booking"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/duthuyen1"
        android:background="@drawable/border_viewpager"
        >
    </ImageView>

    <LinearLayout
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/img_booking"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/border_location"
        >
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_on_24"
            android:layout_marginTop="5dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vịnh hạ long"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >


        </TextView>

    </LinearLayout>
    <TextView
        android:id="@+id/name_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heriage"
        android:textSize="20dp"
        android:layout_below="@id/location"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:textColor="#555555"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:id="@+id/soieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/name_booking"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"

        >
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_directions_boat_24"
            android:layout_marginTop="5dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hạ thủy 2019 -"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >


        </TextView>

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/soieu"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"

        >

        <TextView
            android:id="@+id/giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,500,000"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ/khách"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            >

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/DatNgay"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="Đặt ngay"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_back_primary"
            android:textColor="#FFFFFF"/>
    </LinearLayout>



</RelativeLayout>