<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/border_viewpager"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/img_booking_admin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/duthuyen1"
        android:background="@drawable/border_viewpager"
        android:backgroundTint="@color/smoke"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/img_booking_admin">
        <LinearLayout
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border_location"
            >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_on_24"
                android:layout_marginTop="5dp">

            </ImageView>
            <TextView
                android:id="@+id/DiaDiem_DuThuyen_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vịnh hạ long"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >


            </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/name_booking_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heriage"
            android:textSize="20dp"
            android:layout_below="@id/location"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#555555"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:id="@+id/soieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/name_booking"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"

            >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_directions_boat_24"
                android:layout_marginTop="5dp">

            </ImageView>
            <TextView
                android:id="@+id/Mota_DuThuyen_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hạ thủy 2019 -"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >


            </TextView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/soieu"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            >

            <TextView
                android:id="@+id/giatien_Duthuyen_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,500,000"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"

                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Edit_admin"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:text="Sửa"
                    android:textSize="18dp"
                    android:textAllCaps="false"

                    android:background="@drawable/round_back_primary"
                    android:textColor="#FFFFFF"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>